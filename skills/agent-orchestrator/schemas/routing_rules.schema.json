{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Orchestrator Routing Guidance",
  "type": "object",
  "required": ["version"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "guidance": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "preferred_agents": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "anti_patterns": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "dependency_hints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "reason"],
        "additionalProperties": false,
        "properties": {
          "from": {
            "type": "string",
            "minLength": 1
          },
          "to": {
            "type": "string",
            "minLength": 1
          },
          "reason": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
