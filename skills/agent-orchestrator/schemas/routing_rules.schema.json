{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Orchestrator Routing Rules",
  "type": "object",
  "required": ["version", "hard_rules"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "hard_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["agent", "keywords"],
        "additionalProperties": false,
        "properties": {
          "agent": {
            "type": "string",
            "minLength": 1
          },
          "keywords": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
